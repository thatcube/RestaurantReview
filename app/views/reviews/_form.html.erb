<%= simple_form_for([@restaurant, @restaurant.reviews.build]) do |f| %>
    
    <div id="rating-form">
        <label>Rating</label>
    </div>

    <%= f.input :comment, autofocus: true %>
    <%= f.button :submit %>

<% end %>

<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>